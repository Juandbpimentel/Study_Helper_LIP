# ========================================
# DEFAULT Configuration - EXAMPLE
# Study Helper Backend - Default Settings
# Created: 2025-11-11
# Author: Juandbpimentel
# ========================================
# Este arquivo é um exemplo das configurações padrão da aplicação.
# Copie este arquivo para application.properties e ajuste os valores.
# Para ambientes específicos (dev, prod, test), use application-{profile}.properties
# ========================================


# ========================================
# Application Configuration
# ========================================
spring.application.name=StudyHelper

# ========================================
# Server Configuration
# ========================================
server.port=8080

# ========================================
# Database Configuration - PostgreSQL
# ========================================
# Format: jdbc:postgresql://[HOST]:[PORT]/[DATABASE]
# Example: jdbc:postgresql://db.xxx.supabase.co:5432/postgres
spring.datasource.url=jdbc:postgresql://localhost:5432/studyhelper
spring.datasource.username=your_username
spring.datasource.password=your_password
spring.datasource.driver-class-name=org.postgresql.Driver

# ========================================
# JPA/Hibernate Configuration
# ========================================
spring.jpa.hibernate.ddl-auto=validate
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.PostgreSQLDialect
spring.jpa.properties.hibernate.format_sql=true
spring.jpa.open-in-view=false

# ========================================
# Flyway Configuration
# ========================================
spring.flyway.enabled=true
spring.flyway.baseline-on-migrate=true
spring.flyway.locations=classpath:db/migration

# ========================================
# JWT Configuration
# ========================================
# Generate a secure secret key (minimum 256 bits)
# Example: openssl rand -base64 32
jwt.secret=your-secret-key-change-this-in-production-minimum-256-bits
jwt.expiration=86400000

# ========================================
# CORS Configuration
# ========================================
allowed.origins=http://localhost:3000

# ========================================
# Logging Configuration
# ========================================
logging.level.root=INFO
logging.level.com.studyhelper=INFO
