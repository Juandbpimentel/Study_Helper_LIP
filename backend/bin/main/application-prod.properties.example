# ========================================
# PROD Environment Configuration - EXAMPLE
# Study Helper Backend - Production Settings
# Created: 2025-11-11
# Author: Juandbpimentel
# ========================================
# Usado para: Ambiente de produção
# Características: Debug desabilitado, SQL oculto, SSL habilitado
# IMPORTANTE: NUNCA commite este arquivo com valores reais!
# ========================================
# Para usar: Copie para application-prod.properties e ajuste os valores
# Ative com: SPRING_PROFILES_ACTIVE=prod ou -Dspring.profiles.active=prod
# ========================================


# ========================================
# Application Configuration
# ========================================
spring.application.name=StudyHelper

# ========================================
# Server Configuration
# ========================================
server.port=8080

# ========================================
# Database Configuration - PostgreSQL
# ========================================
# Format: jdbc:postgresql://[HOST]:[PORT]/[DATABASE]
# Example: jdbc:postgresql://db.xxx.supabase.co:5432/postgres
# IMPORTANTE: Use variáveis de ambiente para valores sensíveis
spring.datasource.url=${SPRING_DATASOURCE_URL}
spring.datasource.username=${SPRING_DATASOURCE_USERNAME}
spring.datasource.password=${SPRING_DATASOURCE_PASSWORD}
spring.datasource.driver-class-name=org.postgresql.Driver

# Connection Pool Configuration
spring.datasource.hikari.maximum-pool-size=10
spring.datasource.hikari.minimum-idle=5
spring.datasource.hikari.connection-timeout=20000
spring.datasource.hikari.idle-timeout=300000

# ========================================
# JPA/Hibernate Configuration
# ========================================
spring.jpa.hibernate.ddl-auto=validate
spring.jpa.show-sql=false
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.PostgreSQLDialect
spring.jpa.properties.hibernate.format_sql=false
spring.jpa.open-in-view=false

# ========================================
# Flyway Configuration
# ========================================
spring.flyway.enabled=true
spring.flyway.baseline-on-migrate=true
spring.flyway.locations=classpath:db/migration
spring.flyway.validate-on-migrate=true

# ========================================
# JWT Configuration
# ========================================
# IMPORTANTE: Use variáveis de ambiente para valores sensíveis
# Generate a secure secret key (minimum 256 bits)
# Example: openssl rand -base64 32
jwt.secret=${JWT_SECRET}
jwt.expiration=${JWT_EXPIRATION:86400000}

# ========================================
# CORS Configuration
# ========================================
allowed.origins=${ALLOWED_ORIGINS:https://studyhelper.com}

# ========================================
# Security Configuration
# ========================================
server.ssl.enabled=${SSL_ENABLED:false}
spring.devtools.restart.enabled=false

# ========================================
# Logging Configuration
# ========================================
logging.level.root=WARN
logging.level.com.studyhelper=INFO
logging.level.org.springframework.web=WARN