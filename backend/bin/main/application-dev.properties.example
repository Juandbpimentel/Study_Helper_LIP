# ========================================
# DEV Environment Configuration - EXAMPLE
# Study Helper Backend - Development Settings
# Created: 2025-11-11
# Author: Juandbpimentel
# ========================================
# Usado para: Desenvolvimento local
# Características: Debug habilitado, SQL visível, DevTools ativo
# ========================================
# Para usar: Copie para application-dev.properties e ajuste os valores
# Ative com: SPRING_PROFILES_ACTIVE=dev ou -Dspring.profiles.active=dev
# ========================================


# ========================================
# Application Configuration
# ========================================
spring.application.name=StudyHelper

# ========================================
# Server Configuration
# ========================================
server.port=8080

# ========================================
# Database Configuration - PostgreSQL
# ========================================
# Format: jdbc:postgresql://[HOST]:[PORT]/[DATABASE]
# Example: jdbc:postgresql://db.xxx.supabase.co:5432/postgres
spring.datasource.url=${SPRING_DATASOURCE_URL:jdbc:postgresql://localhost:5432/studyhelper_dev}
spring.datasource.username=${SPRING_DATASOURCE_USERNAME:dev_user}
spring.datasource.password=${SPRING_DATASOURCE_PASSWORD:dev_password}
spring.datasource.driver-class-name=org.postgresql.Driver

# ========================================
# JPA/Hibernate Configuration
# ========================================
spring.jpa.hibernate.ddl-auto=validate
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.PostgreSQLDialect
spring.jpa.properties.hibernate.format_sql=true
spring.jpa.open-in-view=false

# ========================================
# Flyway Configuration
# ========================================
spring.flyway.enabled=true
spring.flyway.baseline-on-migrate=true
spring.flyway.locations=classpath:db/migration

# ========================================
# JWT Configuration
# ========================================
# Generate a secure secret key (minimum 256 bits)
# Example: openssl rand -base64 32
jwt.secret=${JWT_SECRET:your-secret-key-change-this-in-dev-minimum-256-bits}
jwt.expiration=${JWT_EXPIRATION:86400000}

# ========================================
# CORS Configuration
# ========================================
allowed.origins=${ALLOWED_ORIGINS:http://localhost:3000,https://dev-studyhelper.netlify.app}

# ========================================
# DevTools Configuration
# ========================================
spring.devtools.restart.enabled=true

# ========================================
# Logging Configuration
# ========================================
logging.level.root=INFO
logging.level.com.studyhelper=DEBUG
logging.level.org.hibernate.SQL=DEBUG
logging.level.org.springframework.web=DEBUG