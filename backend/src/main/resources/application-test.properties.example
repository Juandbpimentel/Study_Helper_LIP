# ========================================
# TEST Environment Configuration - EXAMPLE
# Study Helper Backend - Test Settings (CI/CD)
# Created: 2025-11-11
# Author: Juandbpimentel
# ========================================
# Usado para: Testes de integração em CI/CD com PostgreSQL real
# Características: PostgreSQL real, Flyway habilitado, migrations testadas
# Este arquivo é usado pelos workflows do GitHub Actions
# ========================================
# Para usar: Copie para application-test.properties e ajuste os valores
# Ative com: SPRING_PROFILES_ACTIVE=test ou -Dspring.profiles.active=test
# ========================================


# ========================================
# Application Configuration
# ========================================
spring.application.name=StudyHelper

# ========================================
# Server Configuration
# ========================================
server.port=8080

# ========================================
# Database Configuration - PostgreSQL
# ========================================
# Format: jdbc:postgresql://[HOST]:[PORT]/[DATABASE]
# Valores padrão para CI/CD (podem ser sobrescritos por variáveis de ambiente)
spring.datasource.url=${SPRING_DATASOURCE_URL:jdbc:postgresql://localhost:5432/studyhelper_test}
spring.datasource.username=${SPRING_DATASOURCE_USERNAME:test_user}
spring.datasource.password=${SPRING_DATASOURCE_PASSWORD:test_password}
spring.datasource.driver-class-name=org.postgresql.Driver

# ========================================
# JPA/Hibernate Configuration
# ========================================
spring.jpa.hibernate.ddl-auto=validate
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.PostgreSQLDialect
spring.jpa.properties.hibernate.format_sql=true
spring.jpa.open-in-view=false

# ========================================
# Flyway Configuration
# ========================================
spring.flyway.enabled=true
spring.flyway.baseline-on-migrate=true
spring.flyway.locations=classpath:db/migration

# ========================================
# JWT Configuration
# ========================================
jwt.secret=${JWT_SECRET:test-secret-key-minimum-256-bits-for-testing-only}
jwt.expiration=${JWT_EXPIRATION:86400000}

# ========================================
# CORS Configuration
# ========================================
allowed.origins=${ALLOWED_ORIGINS:http://localhost:3000}

# ========================================
# Logging Configuration
# ========================================
logging.level.root=INFO
logging.level.com.studyhelper=DEBUG
logging.level.org.hibernate.SQL=DEBUG
logging.level.org.hibernate.type.descriptor.sql.BasicBinder=TRACE
